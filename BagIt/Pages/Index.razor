@page "/"
@using BagIt.Services
@using BagIt.Models
@inject UserService UserServ

<h1>Hello, world!</h1>

Welcome BagIt.

<SurveyPrompt Title="How is Blazor working for you?" />

@if (users == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<table class="table">
		<thead>
		<tr>
			<th>ID</th>
			<th>First Name</th>
			<th>Last Name</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var user in users)
		{
			<tr>
				<td>@user.Id</td>
				<td>@user.FirstName</td>
				<td>@user.LastName</td>
			</tr>
		}
		</tbody>
	</table>
}




@code {
	private List<User> users;

	protected override async Task OnInitializedAsync()
	{
		users = await UserServ.GetAsync();
	}
}
